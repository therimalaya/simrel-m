\corraddress{$if(correspAddress)$ $correspAddress$ $endif$}
\corremail{$if(correspEmail)$ $correspEmail$ $endif$}

\presentadd[\authfn{2}]{$if(presentAddress)$ $presentAddress$ $endif$}

\fundinginfo{$if(fundingInfo)$ $fundingInfo$ $endif$}

